{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}


	<div class="container d-flex justify-content-center mt-5 ">
		<div class="card Regular shadow" style="min-width: 360px;">
			<div class="d-flex justify-content-between px-3 align-items-center border-bottom">
				<span>
					<h1 class="d-flex logo">Cryto Traker</h1>
				</span>
				<div class="d-flex justify-content-center align-items-center">
					<div class="text-right">
						<span class="pen">
							<a class="text-white" href="{{ path('app_portefeuille_index') }}">
								<i class="fa-solid fa-pen"></i>
							</a>
						</span>
						<span class="add">
							<a class="text-white" href="{{ path('app_token_index') }}">
								<i class="fa-solid fa-plus"></i>
							</a>
						</span>
					</div>
					<div></div>
				</div>
			</div>
			<div class="scroll mb-4">
				{% for message in app.flashes('success') %}
					<div class="alert alert-success">
						{{ message }}
					</div>
				{% endfor %}
				<div class="px-1 header-image mb-3">
					<div class="px-2">
						<div class="py-3">
							<div class="d-flex flex-column justify-content-center py-4">
								<h2 class="text-uppercase p-2">Merci de vous connecter</h2>
								<p class="font-weight-light text-justify p-2">Pour g√©rer votre portefeuille de crypto-monnaies</p>
							</div>
						</div>
					</div>

				</div>
				<div class="m-3 d-flex flex-column justify-content-center mt-2 mb-2">
					<form method="post">
						{% if error %}
							<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
						{% endif %}

						{% if app.user %}
							<div class="mb-3">
								You are logged in as
								{{ app.user.userIdentifier }},
								<a href="{{ path('app_logout') }}">Logout</a>
							</div>
						{% endif %}

						<div class="form-group mt-5">
							<label for="inputEmail">Email</label>
							<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control mt-2" autocomplete="email" required autofocus>
						</div>
						<div class="form-group mt-2">
							<label for="inputPassword">Mot de passe</label>
							<input type="password" name="password" id="inputPassword" class="form-control mt-2" autocomplete="current-password" required>
						</div>
						<input
						type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

						{#
																																							        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
																																							        See https://symfony.com/doc/current/security/remember_me.html
																																							
																																							        <div class="checkbox mb-3">
																																							            <label>
																																							                <input type="checkbox" name="_remember_me"> Remember me
																																							            </label>
																																							        </div>
																																							    #}

						<button class="btn btn-lg btn-secondary  mt-4" type="submit">
							Connexion
						</button>
					</form>

				</div>
			</div>
			<div class=" border-top">
				<div class="d-flex justify-content-center">
					{{ include( 'home/_menu.html.twig') }}
				</div>
			</div>
		</div>
	</div>

{% endblock %}
