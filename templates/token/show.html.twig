    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ token.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ token.name }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ token.slug }}</td>
            </tr>
            <tr>
                <th>Symbol</th>
                <td>{{ token.symbol }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ token.price }}</td>
            </tr>
            <tr>
                <th>Change_24h</th>
                <td>{{ token.change24h }}</td>
            </tr>
            <tr>
                <th>Change_1h</th>
