{% extends 'base.html.twig' %}

{% block title %}wallet index
{% endblock %}

{% block body %}


	<div class="container d-flex justify-content-center mt-5 ">
		<div class="card Regular shadow" style="min-width: 360px;">
			<div class="d-flex justify-content-between px-3 align-items-center border-bottom">
				<span>
					<h1 class="d-flex logo">Cryto Traker</h1>
				</span>
				<div class="d-flex justify-content-center align-items-center">
					<div class="text-right">
						<span class="pen">
							<a class="text-white" href="{{ path('app_portefeuille_index') }}">
								<i class="fa-solid fa-pen"></i>
							</a>
						</span>
						<span class="add">
							<a class="text-white" href="{{ path('app_token_index') }}">
								<i class="fa-solid fa-plus"></i>
							</a>
						</span>
					</div>
					<div></div>
				</div>
			</div>
			<div class="stat mb-4">

				<div class="card mb-5">
					<table class="table small p-2">
						<thead>
							<tr>

								<th>Nom
								</th>
								<th>Quantit√©</th>
								<th>Prix</th>
							</tr>
						</thead>
						<tbody>
							{% for wallet in wallets %}
								<tr>

									<td>{{ wallet.name }}</td>
									<td>{{ wallet.quantity }}</td>
									<td>{{ wallet.price }}</td>
									<td>
										<a href="{{ path('app_wallet_show', {'id': wallet.id}) }}">show</a>
										<a href="{{ path('app_wallet_edit', {'id': wallet.id}) }}">edit</a>
									</td>
								</tr>
							{% else %}
								<tr>
									<td colspan="9">no records found</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>

				</div>
				<div class="m-3 d-flex flex-column justify-content-center mt-2 mb-2"></div>
			</div>
			<div class=" border-top">
				<div class="d-flex justify-content-center">
					{{ include( 'home/_menu.html.twig') }}
				</div>
			</div>
		</div>
	</div>


{% endblock %}
